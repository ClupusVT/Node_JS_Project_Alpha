<!-- admin.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Include any additional styling or scripts if needed -->
</head>
<body>
    <h2>Admin Panel</h2>
    <script src="/js/input_validate.js"></script>
    <!-- Add User Form -->
    <form action="/admin/addUser" method="post">
        <label for="newUsername">Username:</label>
        <input type="text" id="newUsername" name="newUsername" required>
        <label for="newPassword">Password:</label>
        <input type="password" id="newPassword" name="newPassword" required>
        <button type="submit">Add User</button>
    </form>

    <br>

    <!-- Delete User Form -->
    <form action="/admin/deleteUser" method="post">
        <label for="deleteUsername">Username:</label>
        <input type="text" id="deleteUsername" name="deleteUsername" required>
        <button type="submit">Delete User</button>
    </form>

    <br>

    <!-- Display Users (for demonstration purposes) -->
    <h3>Current Users:</h3>
    <ul>
        <% users.forEach(user => { %>
            <li><strong><%= user.username %></strong></li>
        <% }); %>
    </ul>

    <a href="/dashboard">Back to Dashboard</a>
    <a href="/logout">Logout</a>
</body>
</html>
